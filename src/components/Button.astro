---
interface Props {
  text: string
  href: string
}

const { text, href } = Astro.props
---

<a
  href={href}
  class="cursor-pointer rounded-full bg-primary px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-blue-600 hover:text-secondary focus:outline-none focus:ring-4 focus:ring-secondary"
  >{text}</a
>
